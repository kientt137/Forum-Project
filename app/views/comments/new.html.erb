<h1>Create new comment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@comment) do |f| %>
        <%= f.label :content%>
        <%= f.text_field :content%>
        <%= f.collection_select(:topic_id, Topic.all, :id, :title)%>
        <%= f.submit "save", class: "btn btn-primary"%>
    <% end %>
  </div></div>

