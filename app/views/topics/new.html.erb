<h1>Create new topic</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_topic_messages' %>
<%= form_for @topic do |f| %>
    <%= f.label :category, "Choose your Category you want"%>
    <%= f.collection_select(:category_id, Category.all, :id, :name)%>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :content, "Content" %>
    <%= f.text_field :content, class: "form-control" %>
    <div class="col-md-4">
    <%= f.submit "Create new topic", class: "btn btn-primary" %></div>

<% end %>
</div>
    </div>