<% provide(:title, "Edit topic") %>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="breadcrumb">Edit topic</h1>
    <%= form_for (@topic) do |f| %>
        <%= render 'shared/error_topic_messages' %>

        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :content, "Content" %>
        <%= f.text_area :content, class: "form-control" %>

        <div class="col-md-4"><%= f.submit "Create new topic", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>