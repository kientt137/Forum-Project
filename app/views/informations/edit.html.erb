<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@info) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :sex, "Gender"%>
        <%= f.select :sex, options_for_select([["Male","Male"],["Female","Female"]], @info.sex)%>
        <%= f.label :birth, "Birthday" %>
        <%= f.date_select :birth, order: [:day, :month, :year], start_year: 1970, end_year: 2002, class: 'form-control'%>
        <%= f.label :address, "Address" %>
        <%= f.select :address, options_for_select([['Thái Bình', "Thái Bình"],['Hà Nội', "Hà Nội"],['Hải Phòng', "Hải Phòng"]], @info.address)%>
        <%= f.label :phone, "Phone number"%>
        <%= f.text_field :phone%>
        <%= f.label :introduce %>
        <%= f.text_field :introduce, class: 'form-control' %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"> Change</a>
    </div>
  </div>
</div>