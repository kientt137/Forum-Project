<% provide(:title, "Edit user") %>


<div class="container">

  <div class="col-md-6 col-md-offset-3">
    <h1 class="breadcrumb">Update your profile</h1>
    <%= form_for @info , url: information_path, html: { multipart: true } do |f| %>
        <%= render 'shared/error_update_messages' %>
        <div class="col-md-4">
          <%= f.label :avatar, "Avatar"%>
        </div>
        <div class="col-md-8"><%= f.file_field :avatar %></div>
        <div class="col-md-4">
          <%= f.label :sex, "Gender"%>
          <%= f.select :sex, options_for_select([["Male","Male"],["Female","Female"]], @info.sex), class: 'form-control'%>
        </div>

        <div class="col-md-4">
          <%= f.label :address, "Country" %>
          <%= f.country_select :address, selected: @info.address, class: 'form-control'%>
        </div>
        <div class="col-md-4">
          <%= f.label :birth, "Birthday" %>
          <%= f.date_select :birth, order: [:day, :month, :year], start_year: 1970, end_year: 2002, class: 'form-control'%>
        </div>
        <%= f.label :phone, "Phone number"%>
        <%= f.text_field :phone, class: 'form-control'%>
        <%= f.label :introduce %>
        <%= f.text_area :introduce, class: 'form-control' %>
        <div class="col-md-6 col-md-offset-3">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>