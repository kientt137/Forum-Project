<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
        <h3>Information</h3>
        <ol class="microposts">
          <li>Name: <b><%= @user.name %></b></li>
          <li>Sex: <% if @information.sex.nil? %>
              <i>Not update</i>
          <%else%>
              <b><%= @information.sex %></b>
          <% end %></li>
          <li>Birthday: <% if @information.birth.nil? %>
                <i>Not update</i>
            <%else%>
                <b><%= @information.birth %></b>
            <% end %></li>
          <li>Address: <% if @information.address.nil? %>
                <i>Not update</i>
            <%else%>
                <b><%= @information.address %></b>
            <% end %></li>
          <li>Phone number: <% if @information.phone == "0000000000" %>
                <i>Not update</i>
            <%else%>
                <b><%= @information.phone %></b>
            <% end %></li>
          <li>Email: <b><%= @user.email%></b></li>
          <li>Introduce: <% if @information.introduce.nil? || @information.introduce.empty?%>
                <i>Not update</i>
            <%else%>
                <b><%= @information.introduce %></b>
            <% end %></li>
        </ol>
  </div>
</div>