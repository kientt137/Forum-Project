<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="round-image-medium"><%= image_tag(@info.avatar.url(:medium)) %></div>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
        <h3>Information</h3>
        <ol class="microposts">
          <li>Name: <b><%= @user.name %></b></li>
          <li>Gender: <% if @info.sex.nil? %>
              <i>Not update</i>
          <%else%>
              <b><%= @info.sex %></b>
          <% end %></li>
          <li>Birthday: <% if @info.birth.nil? %>
                <i>Not update</i>
            <%else%>
                <b><%= @info.birth %></b>
            <% end %></li>
          <li>Address: <% if @info.address.nil? %>
                <i>Not update</i>
            <%else%>
                <b><%= @info.address %></b>
            <% end %></li>
          <li>Phone number: <% if @info.phone == "0000000000" %>
                <i>Not update</i>
            <%else%>
                <b><%= @info.phone %></b>
            <% end %></li>
          <li>Email: <b><%= @user.email%></b></li>
          <li>Introduce: <% if @info.introduce.nil? || @info.introduce.empty?%>
                <i>Not update</i>
            <%else%>
                <b><%= @info.introduce %></b>
            <% end %></li>
        </ol>
  </div>
</div>